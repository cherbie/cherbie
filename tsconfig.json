{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": ["/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "types": ["astro/client", "astro/astro-jsx"],
    "verbatimModuleSyntax": true
  },
  "exclude": ["dist", "node_modules"]
}
